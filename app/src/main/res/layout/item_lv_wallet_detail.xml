<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_head_bg"
    android:orientation="vertical">

    <LinearLayout
        style="@style/layout_my_info"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUnit"
            style="@style/textview_tag"
            android:layout_width="wrap_content"
            android:text="USDT"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/tvTime"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2017-12-12 13:30"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_mini" />

        <TextView
            style="@style/textview_tag"
            android:text="@string/order_done"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

    <View
        style="@style/line_bg_grey"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/type"
            android:textColor="@color/sec_font_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/amount"
            android:textColor="@color/sec_font_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/poundage"
            android:textColor="@color/sec_font_content"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tvType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="币币交易"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="20"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tvCharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0.0001"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/main_bg" />

</LinearLayout>