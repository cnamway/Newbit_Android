<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_head_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="30dp">

        <TextView
            style="@style/textview_tag"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_enter_money_pwd"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <EditText
                android:id="@+id/etPassword"
                style="@style/edittext_normal"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/shape_eidt_bg_chat"
                android:inputType="numberPassword"
                android:labelFor="@+id/etPassword"
                android:maxLength="6"
                android:padding="8dp"
                android:text=""
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/tvRelease"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ripple_btn_global_option_selector"
                android:gravity="center"
                android:text="放行"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>