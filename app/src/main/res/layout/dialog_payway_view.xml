<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_head_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/payway_dialog_title"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_normal"
            android:textStyle="bold"
            android:visibility="visible" />

        <View style="@style/line_bg_grey" />

        <LinearLayout
            android:id="@+id/llBank"
            style="@style/layout_my_info"
            android:visibility="gone">

            <TextView
                style="@style/textview_tag"
                android:drawableLeft="@mipmap/icon_unionpay"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/unionpay_account" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivBank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_uncheck" />

        </LinearLayout>

        <View style="@style/line_bg_grey" />

        <LinearLayout
            android:id="@+id/llAli"
            style="@style/layout_my_info"
            android:visibility="gone">

            <TextView
                style="@style/textview_tag"
                android:drawableLeft="@mipmap/icon_pay"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/ali_account" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivAli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_uncheck" />

        </LinearLayout>

        <View style="@style/line_bg_grey" />

        <LinearLayout
            android:id="@+id/llWeChat"
            style="@style/layout_my_info"
            android:visibility="gone">

            <TextView
                style="@style/textview_tag"
                android:drawableLeft="@mipmap/icon_wechat"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/weichat_account" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivWeChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_uncheck" />

        </LinearLayout>

        <View style="@style/line_bg_grey" />

        <LinearLayout
            android:id="@+id/llPalpay"
            style="@style/layout_my_info"
            android:visibility="gone">

            <TextView
                style="@style/textview_tag"
                android:drawableLeft="@mipmap/icon_paypal"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/str_paypal" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivPalpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_uncheck" />

        </LinearLayout>

        <View style="@style/line_bg_grey" />

        <LinearLayout
            android:id="@+id/llOther"
            style="@style/layout_my_info"
            android:visibility="gone">

            <TextView
                style="@style/textview_tag"
                android:drawableLeft="@mipmap/other"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/str_other" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_uncheck" />

        </LinearLayout>

        <View style="@style/line_bg_grey" />

        <TextView
            style="@style/textview_tag"
            android:layout_margin="15dp"
            android:text="@string/dialog_two_notice"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tvOption"
            style="@style/btn_option_normal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ripple_btn_global_option_selector"
            android:text="@string/confirm"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/tvCancle"
            style="@style/btn_option_normal"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/ripple_global_item_corner"
            android:text="@string/dialog_one_cancel"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_normal" />

    </LinearLayout>

</LinearLayout>