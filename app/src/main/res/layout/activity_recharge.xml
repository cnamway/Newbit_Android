<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_head_bg"
    android:orientation="vertical">

    <!--标题-->
    <include layout="@layout/view_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/ivAddress"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="---"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/tvNotice"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:drawableLeft="@mipmap/icon_warn"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="风险提示：请勿向该地址充值任何非xxx资产"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvCopy"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_global_item_corner"
            android:gravity="center"
            android:text="@string/copy_address"
            android:textColor="@color/main_font_content"
            android:textSize="@dimen/font_mini" />

        <View
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tvAlbum"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_btn_global_option_selector"
            android:gravity="center"
            android:text="@string/save_to_album"
            android:textColor="@color/white"
            android:textSize="@dimen/font_mini" />
    </LinearLayout>

</LinearLayout>
