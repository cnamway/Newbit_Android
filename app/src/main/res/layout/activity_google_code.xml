<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_head" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="@string/google_code"
        android:textColor="@color/sec_font_title"
        android:textSize="@dimen/font_lager" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/google_code_apply"
        android:textColor="@color/sec_font_title"
        android:textSize="@dimen/font_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/etOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint=""
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/sec_font_title"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/etTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint=""
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/sec_font_title"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/etThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint=""
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/sec_font_title"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/etFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint=""
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/sec_font_title"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:id="@+id/etFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint=""
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/sec_font_title"
            android:textSize="@dimen/font_normal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:hint=""
            android:inputType="numberDecimal"
            android:text=""
            android:textColor="@color/sec_font_title"
            android:textSize="@dimen/font_normal" />
    </LinearLayout>

    <com.jkb.vcedittext.VerificationCodeEditText
        android:id="@+id/etCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:text=""
        android:textColor="@color/sec_font_title"
        android:textSize="40sp"
        app:bottomLineHeight="2dp"
        app:bottomLineNormalColor="@color/color_font_kline"
        app:bottomLineSelectedColor="@color/colorAccent"
        app:figures="6"
        app:selectedBackgroundColor="@color/transparent"
        app:verCodeMargin="10dp" />

</LinearLayout>